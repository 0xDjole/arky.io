---
import BaseLayout from "@layouts/BaseLayout.astro";
import ProductList from "@lib/EShop/Products/index.svelte";
import { defaultLocale } from "@lib/i18n";
import { getSupportedLocales } from "@lib/supportedLocales";

export async function getStaticPaths() {
	const supportedLocales = await getSupportedLocales();
	return supportedLocales.map((locale) => ({
		params: {
			locale: locale === defaultLocale ? undefined : locale,
		},
		props: { locale },
	}));
}

const { locale = defaultLocale } = Astro.props;
---

<BaseLayout>
	<div class="container mx-auto px-4 pt-24 pb-8">
		<div class="text-center">
			<div class="inline-block px-4 py-2 bg-amber-100 text-amber-800 text-xs font-medium rounded-full">
				Preview Products
			</div>
		</div>
		<ProductList client:load />
	</div>
</BaseLayout>
