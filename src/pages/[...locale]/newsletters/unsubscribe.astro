---
import BaseLayout from "@layouts/BaseLayout.astro";
import Unsubscribe from "@lib/Newsletter/Unsubscribe.svelte";
import { getStaticPathsForLocales } from "@lib/getLocalesFromSlugs";

export async function getStaticPaths() {
	return await getStaticPathsForLocales();
}

const { locale = defaultLocale } = Astro.props;
---

<BaseLayout>
	<div class="site-container py-12 md:py-24">
		<div class="mx-auto max-w-3xl">
			<div class="text-center mb-8">
				<h1 class="text-3xl font-bold">Manage Newsletter Subscription</h1>
				<p class="text-muted-foreground mt-2">This page processes your unsubscribe request.</p>
			</div>
			<Unsubscribe client:load />
		</div>
	</div>
</BaseLayout>